spring:
 datasource:
  url: jdbc:postgresql://localhost:5432/mydatabase  # Replace with your DB name
  username: myuser                              # Replace with your username
  password: mypassword                          # Replace with your password
  driver-class-name: org.postgresql.Driver
 jpa:
  hibernate:
   ddl-auto: create-drop
  show-sql: true #seeing sql queries
  properties:
   hibernate:
    format_sql: true # quiery to be formated
  database: postgresql
  database-platform: org.hibernate.dialect.PostgreSQLDialect
